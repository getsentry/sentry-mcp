{
  "name": "mcp-github-oauth",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "tsc",
    "deploy": "wrangler deploy",
    "dev": "wrangler dev",
    "eval": "vitest --config=vitest.eval.config.ts",
    "eval:ci": "vitest run --config=vitest.eval.config.ts --coverage --reporter=junit --outputFile=eval.junit.xml",
    "format": "biome format --write",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "inspector": "pnpx @modelcontextprotocol/inspector@latest",
    "start": "wrangler dev",
    "start:stdio": "tsx src/mcp/start-stdio.ts",
    "cf-typegen": "wrangler types",
    "postinstall": "simple-git-hooks",
    "test": "vitest",
    "test:ci": "vitest run --coverage --reporter=junit --outputFile=tests.junit.xml",
    "test:watch": "vitest watch"
  },
  "devDependencies": {
    "@ai-sdk/openai": "^1.3.9",
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/vitest-pool-workers": "^0.8.14",
    "@evalite/core": "^0.7.0",
    "@types/node": "^22.14.0",
    "@vitest/coverage-v8": "^3",
    "ai": "^4.3.4",
    "autoevals": "^0.0.125",
    "dotenv": "^16.4.7",
    "lint-staged": "^15.5.0",
    "msw": "^2.7.3",
    "simple-git-hooks": "^2.12.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6",
    "vitest": "^3",
    "vitest-evals": "^0.1.3",
    "wrangler": "^4.9.1"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.2",
    "@modelcontextprotocol/sdk": "^1.9.0",
    "@sentry/cloudflare": "^9.12.0",
    "agents": "~0.0.57",
    "better-sqlite3": "^11.9.1",
    "hono": "^4.7.6",
    "workers-mcp": "0.1.0-3",
    "zod": "^3.24.2"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged --concurrent false"
  },
  "lint-staged": {
    "**/*.{ts,tsx,json}": ["biome format --write"],
    "**/*.{ts,tsx}": ["biome lint --fix"]
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "better-sqlite3",
      "esbuild",
      "sharp",
      "simple-git-hooks",
      "workerd"
    ]
  }
}
