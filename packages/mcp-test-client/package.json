{
  "name": "@sentry/mcp-test-client",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "CLI tool to test the Sentry MCP server",
  "bin": {
    "sentry-mcp-test-client": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown",
    "start": "node dist/index.js",
    "test-client": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest run --reporter=junit --outputFile=tests.junit.xml",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.22",
    "@sentry/core": "^9.33.0",
    "@sentry/mcp-server": "workspace:*",
    "@sentry/node": "^9.33.0",
    "ai": "^4.3.16",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.6.1",
    "open": "^10.1.2"
  },
  "devDependencies": {
    "tsdown": "^0.12.9",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
