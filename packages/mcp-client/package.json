{
  "name": "mcp-client",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "description": "CLI tool to test Sentry MCP server using stdio transport",
  "bin": {
    "mcp-client": "./dist/index.js"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mcp-client": "node dist/index.js",
    "test": "vitest",
    "test:ci": "vitest run --reporter=junit --outputFile=tests.junit.xml",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.0.8",
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@sentry/mcp-server": "workspace:*",
    "ai": "^4.0.26",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "dotenv": "^16.5.0",
    "open": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.32",
    "tsdown": "^0.12.8",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  }
}
