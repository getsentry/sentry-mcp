{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vite (React) Library",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "module": "ESNext",
    "types": ["vite/client"]
  }
}
